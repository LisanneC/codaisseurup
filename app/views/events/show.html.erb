<div class="panel panel-primary">
  <div class="panel-heading"><%= @event.name %></div>

  <div class="panel-body">

    <p>Location: <%= @event.location %></p>
    <p>Host: <%= mail_to @event.user.email, @event.user.email %></p>

<hr>
    <!-- Main Info -->
    <h4>Main Info</h4>
    <p>Name: <%= @event.name %></p>
    <p>Description: <%= @event.description %></p>
    <p>Start at: <%= @event.starts_at %></p>
    <p>End at: <%= @event.ends_at %></p>
    <p>Capacity: <%= @event.capacity %></p>
    <p>Price: <%= @event.price %></p>
<hr>
    <!-- About -->
    <h4>About</h4>
    <p><%= @event.description %></p>
<hr>
    <!-- Amenities -->
    <h4>Amenities</h4>
    <ul class="amenities">
      <li><%= !@event.includes_food ? ("<s>Food</s>").html_safe : "Food" %></li>
      <li><%= !@event.includes_drinks ? ("<del>Drinks</del>").html_safe : "Drinks" %></li>
    </ul>

    <!-- Photos -->
    <h4>Photos</h4>
    <% @event.photos.each do |photo| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= image_tag photo.image.thumbnail %>
        </div>
    </div>
    <% end %>

    <!-- Themes -->
    <h4>Categories</h4>
    <% @categories.each do |category| %>
      <span class="label label-success"><%= category.name %></span>
    <% end %>

  </div>

</div>

<%= link_to "Back", events_path, class: "btn btn-default" %>
